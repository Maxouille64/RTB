{
  "manifest_version": 2,
  "name": "Random Team Battle",
  "version": "1.0.9",

  "description": "Play any tier with a random team!",

  "icons": {
    "128": "icons/bn128.png"
  },

  "browser_action": {
    "default_icon": "icons/bn128.png",
    "default_popup": "popup/popup.html",
    "default_title": "RTB"
  },


  "content_scripts": [
    {
      "matches": ["*://play.pokemonshowdown.com/*", "*://*.psim.us/*"],
      "js": ["production.min.js","content.js"]
    }
  ],

  "permissions": [
    "storage"
  ],

  "web_accessible_resources": [
    "*.js"
  ],

  "browser_specific_settings": {
    "gecko": {
        "id": "{a93f22b4-7003-4e54-accd-2863d9d11ed8}"
    }
  }
}
