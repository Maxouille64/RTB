{
  "manifest_version": 3,
  "name": "Random Team Battle",
  "version": "1.0.0",

  "description": "Play any tier with a random team!",

  "icons": {
    "128": "icons/bn128.png"
  },

  "action": {
    "default_icon": "icons/bn128.png",
    "default_popup": "popup/popup.html",
    "default_title": "RTB"
  },


  "content_scripts": [
    {
      "matches": ["*://play.pokemonshowdown.com/*", "*://*.psim.us/*"],
      "js": ["production.min.js","content.js"]
    }
  ],

  "permissions": [
    "storage"
  ],

  "web_accessible_resources": [{
	  "resources": ["showdown.js","production.min.js"],
	  "matches": ["<all_urls>"]
}]
}
